# EditorConfig for dotfiles project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[{gitconfig,tmux.conf,vimrc}]
indent_style = space
indent_size = 2
